<h1>Cohort Listing</h1>
<% if @cohort.blank? %>
  <p> There are no cohorts currently in the system.</p>
  <% else %>

 
  <p>There are <%=@cohort_size%> cohorts listed below:</p>
  <table> 
    <% @cohort.each do |cohort| %>
      <tr id="cohort<%= cohort.id %>" >
       <td><%= cohort.id%></td>
       
        <td><%= cohort.cohort_name %></td>
        <td><%= cohort.cohort_start_date %></td>
        <td><%= cohort.cohort_end_date %></td>
        <td><%= cohort.courses_id %></td>
        <td><%= cohort.teachers_id %></td>
        
        <td><%= link_to 'Edit', edit_cohort_path(cohort.id) %></td>
        <td><%= link_to 'Destroy', cohort_path(cohort.id), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td><br>
      </tr>
    <% end %>
        </table>

<% end %>
