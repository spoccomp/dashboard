<h1>Cohort#edit</h1>
<p>Find me in app/views/cohort/edit.html.erb</p>


 <%= form_with scope: :cohort, model: @cohort, local: true do |form| %>
  <p>Cohort - ID: <%=@cohort.id%></p>
<div class="form-group">
    <%= form.label :cohort_name %><br>
    <%= form.text_field :cohort_name %>
</div>
 
<div class="form-group">
    <%= form.label :cohort_start_date %><br>
    <%= form.date_field :cohort_start_date%>
</div>
 
 <div class="form-group">
    <%= form.label :cohort_end_date%><br>
     <%= form.date_field :cohort_end_date%>
</div>

<div>
<p class="form-control input-sm selectpicker"><%= form.label :courses_id %>
<%= form.label :courses_id%>
<%= form.select(:courses_id, @course)%></p>
<%# <%= collection_select(:courses, :courses_id, @course, :id, :course_name, {:prompt => false}) %> </p>  


<p class="form-control input-sm selectpicker"><%= form.label :teachers_id %>
<%= form.select(:teachers_id,  @teacher)%></p>
<%# <%= collection_select(:students, :teachers_id , @teacher, :id, :last_name, {:prompt => false}) %> </p>  



<p><%= form.label :students_id %>
<select name= "students_id[]" multiple >
  <%= @student.each do |stu| %>
  <option value="<%= stu.id%>"> <%= stu.first_name %> <%=stu.last_name %></option>     
  <% end %>
</select>
<%# <%= collection_select(:students, :students_id, @student, :id, :last_name, {:prompt => false}, {:multiple => true}) %> </p>  


<br/>

  <div>
    <%= form.submit %>
  </div>
<%end%>
  
<%= link_to 'Dashboard', cohort_path(@cohort) %>

