<h1>Teacher#edit</h1>
<p>Find me in app/views/teacher/edit.html.erb</p>


<%= form_with scope: :teacher, model: @teacher, local: true do |form| %>
  <div class="form-group">
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>
 
  <div class="form-group">
    <%= form.label :password %><br>
     <%= form.text_field :password%>
  </div>
 
 <div class="form-group">
    <%= form.label :first_name %><br>
     <%= form.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= form.label :last_name %><br>
     <%= form.text_field :last_name %>
  </div>
  <div class="form-group">
    <%= form.label :age %><br>
     <%= form.text_field :age %>
  </div>
  <div class="form-group">
     <%= form.label :age %><br>
     <%= @teacher.errors.full_messages_for(:age) if @teacher.errors.include?(:age) %>
     <%= form.text_field :age %>
  </div>
  <div class="form-group">
     <%= form.label :salary %><br>
     <%= @teacher.errors.full_messages_for(:salary) if @teacher.errors.include?(:salary) %>
     <%= form.text_field :salary%>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Dashboard', admin_pages_path(@teachers) %>