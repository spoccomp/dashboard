<h1 class="text-center">Edit a Student</h1>
<hr>


<%= form_with scope: :student, model: @student, local: true do |form| %>
  <div class="form-group">
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>
 
  <div class="form-group">
    <%= form.label :password %><br>
     <%= form.text_field :password%>
  </div>
 
 <div class="form-group">
    <%= form.label :first_name %><br>
     <%= form.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= form.label :last_name %><br>
     <%= form.text_field :last_name %>
  </div>
  <div class="form-group">
    <%= form.label :age %><br>
    <%= @student.errors.full_messages_for(:age) if @student.errors.include?(:age) %>
     <%= form.text_field :age %>
  </div>
  <div class="form-group">
    <%= form.label :education %>
     <%= form.text_field :education %>
  </div>
  <br>
  <div>
     <button><%= form.submit %><button>
  </div>
<% end %>

<%= link_to 'Dashboard', admin_pages_path(@students) %>