<h1 class="d-flex justify-content-center">Student Dashboard</h1>


<h3 class="d-flex justify-content-center">Administrator</h1>

<hr>


<div class="container">
  <div class="row">
   <ul class="nav nav-tabs">
  <li class="nav-item">
    <p class="nav-link "> <%= link_to "Create", new_student_path %></p>
  </li>
</ul>
</div>
</div>
<h1>List of Students</h1>
<% if @students.blank? %>
  <p> There are no students currently in the system.</p>
<% else %>
<div class="container">
<div class="row"> 
<% @students.each do |student|%>
    <div class="col-4">
        <div class="card border border-primary rounded" style="width: 18rem;">
        <table>
          <tr id="student<%= student.id %>" class="list-group">
            <td class="list-group-item">Student-ID: <%= student.id%> </td><br>
            <td class="list-group-item">Student-Username: <%= student.username%> </td>
            <td class="list-group-item">First Name: <%= student.first_name%> </td>
            <td class="list-group-item">Last Name: <%= student.last_name%> </td>
            <td class="list-group-item">Age: <%= student.age%> </td>
            <td class="list-group-item">Education: <%= student.education%> </td>
            <%# <td class="list-group-item">Cohort-ID: <%= student.cohort_id%> 
            
            <td><%= link_to 'Edit', edit_student_path(student.id) %></td>
            <td><%= link_to 'Destroy', student_path(student.id), remote: true,
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td><br>
          </tr>
        </table>
        </div>
      </div>
      <% end %>
    </div>
    
  </div>
<% end %>
