<h1>Log In</h1>
<%= form_for :login do |form| %>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@example.com" %>
    <small id="emailHelp" class="form-text text-muted">To login: example@example.com  (This is to test the application out)</small>
  </div>
  <div class="form-group">
    <%= form.label :password  %>
    <%= form.password_field :password, class: "form-control", placeholder: "password"%>
    <small id="emailHelp" class="form-text text-muted">Password is: password  </small> 
  </div>
  <div>
    <%= form.submit "Log In", class: "btn btn-primary"  %>
  </div>
<% end %>
